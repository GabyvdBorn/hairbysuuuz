<!DOCTYPE html>
<html>
  <head>
    <title>Hairbysuuz</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body>

        <% if current_page?(root_path) %>
          <div class="hero-overlay">
             <% else %>
          <div class="hero-overlay-white">
         <% end %>

        <% if current_page?(root_path) %>
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
                  <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                      <li class="nav-item active">
                      <%= link_to root_path, class: "navbar-title" do %>
                        <h1>Home</h1>
                      <% end %>
                      </li>
                      <li class="nav-item active">

                        <%= link_to prijslijst_path, class: "navbar-title" do %>
                          <h1>Prijslijst</h1>
                        <% end %>
                      </li>
                      <li class="nav-item active">
                        <%= link_to about_path, class: "navbar-title" do %>
                          <h1>About</h1>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </nav>
             <% else %>
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                  <div class="collapse navbar-collapse" id="navbarNav-black">
                    <ul class="navbar-nav">
                      <li class="nav-item active">
                      <%= link_to root_path, class: "navbar-title" do %>
                        <h1>Home</h1>
                      <% end %>
                      </li>
                      <li class="nav-item">
                        <%= link_to prijslijst_path, class: "navbar-title" do %>
                          <h1>Prijslijst</h1>
                        <% end %>
                      </li>

                      </li>
                      <li class="nav-item">
                        <%= link_to about_path, class: "navbar-title" do %>
                          <h1>About</h1>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </nav>
            <% end %>
          <div class="page-container">
        <%= yield %>
      </div>
  </body>
</html>
